/* miniprogram/pages/kind/index.wxss */
page{
  height: 100vh;
}
.kind{
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: flex-start;
}
.kind-left{
  width: 180rpx;
  height: 100vh;
  background-color: #fff;
  padding: 0;
}
.kind-left .item{
  text-align: center;
  margin:0;
  font-size: 32rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.active{
  content: "";
  color: #fd4990;

}
.kind-right{
  flex: auto;
  height: 100vh;
  overflow-y: auto;
  background-color: #f2f3f5;
}


